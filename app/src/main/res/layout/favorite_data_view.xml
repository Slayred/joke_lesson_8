<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="@dimen/padding"
    tools:parentTag="android.widget.LinearLayout">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/show_favorite_joke" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/common_data_item"
        />


    <com.example.joke_lesson_8.presentation.CorrectProgressBar
        android:id="@+id/progressBar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"/>

    <com.example.joke_lesson_8.presentation.CorrectButton
        android:id="@+id/btnJoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.Joke_lesson_8"
        tools:text="@string/get_joke" />
</LinearLayout>